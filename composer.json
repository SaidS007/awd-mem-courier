            "MaarchCourrier\\Tests\\Unit\\": "test/Unit/"
        }
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.14",
        "respect/validation": "^2.3.7",
        "php-http/curl-client": "^2.3.0",
        "m4tthumphrey/php-gitlab-api": "^11.14.0",
        "zf1/zend-search-lucene": "~1.12.20",
        "tecnickcom/tcpdf": "^6.7.5",
        "setasign/fpdi": "~2.6.0",
        "phpmailer/phpmailer": "^6.9.1",
        "endroid/qr-code": "^5.0.9",
        "tinybutstrong/tinybutstrong": "^3.15.2",
        "tinybutstrong/opentbs": "^1.12.1",
        "tecnickcom/tc-lib-barcode": "^2.4",
        "firebase/php-jwt": "^6.11",
        "rafikhaceb/pi-barcode": "^2.0",
        "stevenmaguire/oauth2-keycloak": "~5.1.0",
        "apereo/phpcas": "~1.6.1",
        "monolog/monolog": "^2.9.3",
        "psr/log": "~3.0.0",
        "psr/cache": "~3.0.0",
        "slim/psr7": "^1.6.1",
        "ext-openssl": "*",
        "ext-curl": "*",
        "jumbojett/openid-connect-php": "v1.0.2",
        "phpseclib/phpseclib": "3.0.46"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.20",
        "squizlabs/php_codesniffer": "^3.8",
        "slevomat/coding-standard": "^8.14",
        "phpstan/phpstan": "^1.12",
        "micheh/phpcs-gitlab": "^1.1",
        "rector/rector": "^0.19.5",
        "symplify/easy-coding-standard": "^12.1"
    },
    "scripts": {
        "reload-packages": "rm -Rf vendor && composer i",
        "phpcs-courrier": "vendor/bin/phpcs --standard=phpcs-rules.xml --extensions=php --tab-width=4 -sp src/app src/core src/backend",
        "phpcs-psr12": "vendor/bin/phpcs --standard=PSR12 src/app src/core src/backend -p",
        "phpcs": [
            "@phpcs-courrier",
            "@phpcs-psr12"
        ],
        "phpstan": "vendor/bin/phpstan analyse --memory-limit 4G  ./src/app/ src/core src/backend -c phpstan.neon"
    }
}
